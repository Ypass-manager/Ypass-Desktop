<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:YpassDesktop.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="YpassDesktop.Views.ConnectionPageView"
             x:CompileBindings="True"
             x:DataType="vm:ConnectionPageViewModel">


	
	
	<StackPanel Spacing="10">
		<Button Content="Go back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Command="{Binding GoBackCommand}"/>
		<Label HorizontalAlignment="Left" VerticalAlignment="Top" Content="Log up" Margin="62,-3,0,0"/>
		<TextBlock>. Your account list name :</TextBlock>
		<TextBox Text="{Binding DatabaseName}" />
		<TextBlock>. Your password :</TextBlock>
		<TextBox PasswordChar="$" Text="{Binding PasswordInput}" Watermark="Password" UseFloatingWatermark="True"/>
		<Button Content="Enter" HorizontalAlignment="Center" VerticalAlignment="Top" Width="100" Command="{Binding LoginCommand}"/>
		<TextBlock Text="{Binding ConnectionStatus}" HorizontalAlignment="Center" VerticalAlignment="Top" 
			IsVisible="{Binding IsConnectionStatusVisible}" Foreground="Red" />
	</StackPanel>
</UserControl>
